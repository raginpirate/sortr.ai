<div style="display: flex;
    flex-direction: column;
    justify-content: center;
    margin: auto; height: 75vh">
  <%= image_tag("51730684-sedan-cartoon-car-illustration-on-transparent-background.jpg", style: "width: 100px; margin-left: auto; margin-right: auto;") %>
  <h3 style="text-align: center">Uber for Sorting</h3>
  <span style="text-align: center">The worlds most innovative sorting algorithm.</span>
  <p style="text-align: center; margin-top: 20px;">Signup / Login</p>
  <%= form_for :driver, url: {action: :create} do |f| %>
    <div style="display: flex; justify-content: center;">
      <%= f.text_field :name, style: "border-radius: 8px;" %>
      <%= f.submit "Start Sorting!", style: "border-radius: 8px;" %>
    </div>
  <% end %>
</div>
